---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  color?: 'primary' | 'white';
}

const { 
  size = 'md',
  color = 'primary'
} = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-6 h-6',
  lg: 'w-8 h-8'
};

const colorClasses = {
  primary: 'text-amber-600',
  white: 'text-white'
};
---

<div class="flex justify-center items-center">
  <div class={`animate-spin rounded-full border-2 border-t-transparent ${sizeClasses[size]} ${colorClasses[color]}`}>
    <span class="sr-only">Cargando...</span>
  </div>
</div>

