---
import { Image } from "astro:assets";

interface CardBenefitsProps {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="flex flex-col justify-start bg-white shadow-sm p-6 rounded-lg">
  <div class="bg-gray-200 w-11 h-11 rounded-full p-2.5">
    <Image src={icon} alt={title} class="w-6 h-6 object-cover" />
  </div>

  <h3 class="text-2xl font-semibold text-title-900 mt-4">{title}</h3>
  <p class="text-sm md:text-lg text-paragraph-500 mt-2 text-left">
    {description}
  </p>
</div>
