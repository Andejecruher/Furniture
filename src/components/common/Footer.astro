---
// Datos para los enlaces del footer
const footerLinks = [
  {
    title: "Comprar",
    links: [
      { label: "Todos los Productos", url: "/productos" },
      { label: "Ofertas", url: "/ofertas" },
      { label: "Novedades", url: "/novedades" },
      { label: "Colecciones", url: "/colecciones" },
      { label: "Outlet", url: "/outlet" }
    ]
  },
  {
    title: "Información",
    links: [
      { label: "Sobre Nosotros", url: "/sobre-nosotros" },
      { label: "Nuestras Tiendas", url: "/tiendas" },
      { label: "Sostenibilidad", url: "/sostenibilidad" },
      { label: "Blog", url: "/blog" },
      { label: "Trabaja con Nosotros", url: "/empleo" }
    ]
  },
  {
    title: "Ayuda",
    links: [
      { label: "Envíos y Entregas", url: "/envios" },
      { label: "Devoluciones", url: "/devoluciones" },
      { label: "Garantía", url: "/garantia" },
      { label: "Preguntas Frecuentes", url: "/faq" },
      { label: "Contacto", url: "/contacto" }
    ]
  }
];

// Datos para redes sociales
const socialLinks = [
  { label: "Facebook", url: "https://facebook.com", icon: "facebook" },
  { label: "Instagram", url: "https://instagram.com", icon: "instagram" },
  { label: "Pinterest", url: "https://pinterest.com", icon: "pinterest" },
  { label: "YouTube", url: "https://youtube.com", icon: "youtube" }
];

// Datos para métodos de pago
const paymentMethods = [
  "visa", "mastercard", "amex", "paypal", "applepay"
];
---

<footer class="bg-gray-100 pt-12 pb-6">
  <div class="container mx-auto px-4">
    <!-- Sección principal del footer -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Columna de la marca -->
      <div>
        <div class="flex items-center mb-4">
          <span class="text-2xl font-bold text-amber-600">Furniture</span>
          <span class="text-2xl font-light text-gray-700">Store</span>
        </div>
        <p class="text-gray-600 mb-6">
          Diseñamos y fabricamos muebles de alta calidad para hacer de tu hogar un espacio único y confortable.
        </p>
        
        <!-- Redes sociales -->
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="text-gray-500 hover:text-amber-600 transition-colors duration-300"
              aria-label={social.label}
            >
              {social.icon === "facebook" && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
                </svg>
              )}
              {social.icon === "instagram" && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              )}
              {social.icon === "pinterest" && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z" />
                </svg>
              )}
              {social.icon === "youtube" && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Columnas de enlaces -->
      {footerLinks.map(section => (
        <div>
          <h3 class="text-lg font-semibold mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.url} 
                  class="text-gray-600 hover:text-amber-600 transition-colors duration-300"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Suscripción al newsletter -->
    <div class="bg-white p-6 rounded-lg shadow-sm mb-12">
      <div class="grid md:grid-cols-2 gap-6 items-center">
        <div>
          <h3 class="text-xl font-semibold mb-2">Suscríbete a nuestro newsletter</h3>
          <p class="text-gray-600">Recibe las últimas tendencias, ofertas exclusivas y consejos de decoración.</p>
        </div>
        <div>
          <form class="flex flex-col sm:flex-row gap-2">
            <input 
              type="email" 
              placeholder="Tu correo electrónico" 
              class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:ring-amber-500 focus:border-amber-500"
              required
            />
            <button 
              type="submit" 
              class="bg-amber-600 hover:bg-amber-700 text-white px-4 py-2 rounded-md transition-colors duration-300"
            >
              Suscribirse
            </button>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Métodos de pago -->
    <div class="border-t border-gray-200 pt-8 mb-8">
      <div class="flex flex-wrap justify-center gap-4">
        {paymentMethods.map(method => (
          <div class="bg-white p-2 rounded-md shadow-sm">
            <img 
              src={`/images/payment/${method}.svg`} 
              alt={`Pago con ${method}`} 
              class="h-8"
              onerror="this.src='/placeholder.svg?height=32&width=50'; this.onerror=null;"
            />
          </div>
        ))}
      </div>
    </div>
    
    <!-- Información legal -->
    <div class="border-t border-gray-200 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 text-sm mb-4 md:mb-0">
          &copy; {new Date().getFullYear()} FurnitureStore. Todos los derechos reservados.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/privacidad" class="text-gray-500 hover:text-amber-600 text-sm">Política de Privacidad</a>
          <a href="/terminos" class="text-gray-500 hover:text-amber-600 text-sm">Términos y Condiciones</a>
          <a href="/cookies" class="text-gray-500 hover:text-amber-600 text-sm">Política de Cookies</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Script para manejar la suscripción al newsletter
  document.addEventListener('DOMContentLoaded', () => {
    const newsletterForm = document.querySelector('footer form');
    
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const emailInput = newsletterForm.querySelector('input[type="email"]') as HTMLInputElement;
        const email = emailInput.value.trim();
        
        if (email) {
          // En un caso real, aquí enviarías el email a tu API
          console.log(`Suscripción al newsletter: ${email}`);
          
          // Mostrar mensaje de confirmación
          alert('¡Gracias por suscribirte a nuestro newsletter!');
          
          // Limpiar el formulario
          emailInput.value = '';
        }
      });
    }
  });
</script>

