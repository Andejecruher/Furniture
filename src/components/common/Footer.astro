---
import Logo from "@/components/common/Logo.astro";
// Datos para los enlaces del footer
const footerLinks = [
  {
    title: "Product",
    links: [
      { label: "New Arrivals", url: "/products" },
      { label: "Best Selling", url: "/products" },
      { label: "Home Decor", url: "/products" },
      { label: "Kitchen Set", url: "/products" },
    ],
  },
  {
    title: "Services",
    links: [
      { label: "Catalog", url: "/services" },
      { label: "Blog", url: "/services" },
      { label: "FaQ", url: "/services" },
      { label: "Pricing", url: "/services" },
    ],
  },
  {
    title: "Follow Us",
    links: [
      { label: "Facebook", url: "/facebook" },
      { label: "Instagram", url: "/instagram" },
      { label: "Twitter", url: "/twitter" },
    ],
  },
];
---

<footer class="bg-white pt-12 pb-6">
  <div class="container mx-auto px-4 border-t border-gray-100">
    <!-- Sección principal del footer -->
    <div
      class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-8 mb-12 mt-24"
    >
      <!-- Columna de la marca -->
      <div class="col-span-1 md:col-span-2 lg:col-span-2">
        <div class="flex items-center mb-4">
          <Logo />
        </div>
        <p class="text-gray-600 mb-6 max-w-[505px]">
          Lalasia is digital agency that help you make better experience iaculis
          cras in.
        </p>
      </div>

      <!-- Columnas de enlaces -->
      <div class="gap-8 grid grid-cols-3 md:grid-cols-3 lg:grid-cols-3">
        {
          footerLinks.map((section) => (
            <div>
              <h3 class="text-lg font-semibold mb-4">{section.title}</h3>
              <ul class="space-y-2">
                {section.links.map((link) => (
                  <li>
                    <a
                      href={link.url}
                      class="md:text-title-950 hover:text-primary-600 text-paragraph-500 transition-colors duration-300"
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Información legal -->
    <div class="border-t border-gray-200 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-title-950 text-base mb-4 md:mb-0 p2">
          &copy; {new Date().getFullYear()} Lalasia. All rights reserved.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/privacidad"
            class="text-title-950 hover:text-primary-600 text-sm"
            >Privacy Policy</a
          >
          <a
            href="/terminos"
            class="text-title-950 hover:text-primary-600 text-sm"
            >Terms and Conditions</a
          >
          <a
            href="/cookies"
            class="text-title-950 hover:text-primary-600 text-sm"
            >Cookie Policy</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Script para manejar la suscripción al newsletter
  document.addEventListener("DOMContentLoaded", () => {
    const newsletterForm = document.querySelector("footer form");

    if (newsletterForm) {
      newsletterForm.addEventListener("submit", (e) => {
        e.preventDefault();

        const emailInput = newsletterForm.querySelector(
          'input[type="email"]'
        ) as HTMLInputElement;
        const email = emailInput.value.trim();

        if (email) {
          // En un caso real, aquí enviarías el email a tu API
          console.log(`Suscripción al newsletter: ${email}`);

          // Mostrar mensaje de confirmación
          alert("¡Gracias por suscribirte a nuestro newsletter!");

          // Limpiar el formulario
          emailInput.value = "";
        }
      });
    }
  });
</script>
