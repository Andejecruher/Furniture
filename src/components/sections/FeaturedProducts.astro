---
import ProductCard from "../furniture/ProductCard.astro";
import type { FurnitureProduct } from "../../types/furniture";

interface Props {
  title: string;
  products: FurnitureProduct[];
}

const { title, products } = Astro.props;
---

<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-8">{title}</h2>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
    >
      {products.map((product, index) => <ProductCard product={product} />)}
    </div>
  </div>
</section>
