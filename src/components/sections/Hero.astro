<section class="relative bg-gray-900 text-white">
  <!-- Imagen de fondo con overlay -->
  <div class="absolute inset-0 z-0">
    <img
      src="/placeholder.svg?height=800&width=1920"
      alt="Modern living room"
      class="w-full h-full object-cover opacity-50"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-900/50"></div>
  </div>

  <!-- Contenido -->
  <div class="relative z-10 container mx-auto px-4 py-24 lg:py-32">
    <div class="max-w-2xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
        Diseña el hogar de tus sueños
      </h1>
      <p class="text-lg md:text-xl text-gray-200 mb-8">
        Descubre nuestra colección de muebles de diseño exclusivo. Calidad excepcional y estilo único para transformar tu espacio.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <a 
          href="/productos" 
          class="inline-flex items-center justify-center bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-md transition-colors duration-300"
        >
          Explorar Colección
        </a>
        <a 
          href="/categorias" 
          class="inline-flex items-center justify-center bg-white hover:bg-gray-100 text-gray-900 px-6 py-3 rounded-md transition-colors duration-300"
        >
          Ver Categorías
        </a>
      </div>
    </div>
  </div>

  <!-- Indicadores de características -->
  <div class="relative z-10 bg-gray-900/80 py-6">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="font-semibold mb-1">Envío Gratis</div>
          <p class="text-gray-300 text-sm">En pedidos superiores a $500</p>
        </div>
        <div>
          <div class="font-semibold mb-1">Garantía de 2 Años</div>
          <p class="text-gray-300 text-sm">En todos nuestros productos</p>
        </div>
        <div>
          <div class="font-semibold mb-1">Devolución Gratuita</div>
          <p class="text-gray-300 text-sm">30 días para cambios y devoluciones</p>
        </div>
      </div>
    </div>
  </div>
</section>

