---
import image1 from "@/assets/products/f91e5a5061be628a0964857c38d8bb13.png";
import image2 from "@/assets/products/8df4cb9bab91e209185b8fce9d976cc1.jpg";
// Definimos las props usando TypeScript
interface Props {
  title: string;
  subtitle: string;
  paragraph: string;
}

// Destructuramos las props con valores por defecto
const { title, subtitle, paragraph } = Astro.props;
---

<section class="mt-20 mb-20">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2.5 md:gap-10 px-2 py-2">
      {/* Title and paragraph */}
      <div class="flex flex-col">
        <span
          class="text-sm md:text-lg text-secondary-300 font-semibold text-left mb-2 ml-2"
          >{title}</span
        >
        <p
          class="text-2xl xl:text-5xl text-paragraph-950 font-bold text-left md:max-w-xl"
        >
          {subtitle}
        </p>
        <p
          class="mt-4 md:mt-8 text-sm md:text-lg text-paragraph-500 max-w-96 md:max-w-lg text-left md:text-justify"
        >
          {paragraph}
        </p>
        <button
          class="mt-8 bg-primary-500 text-white py-2 px-4 h-12 max-w-96 md:max-w-44"
        >
          Learn More
        </button>
        <div class="mt-2 lg:mt-10 xl:mt-2 w-full h-[360px] hidden md:block">
          {/* Image */}
          <img
            src={image1.src}
            alt="Our Product 1"
            class="object-cover w-full h-full flex-shrink-0"
          />
        </div>
      </div>

      {/* Image and info */}
      <div class="">
        {/* Info experience */}
        <div
          class="flex flex-row justify-center items-center gap-2.5 md:gap-10 mb-10"
        >
          <div class="flex flex-col">
            <p
              class="text-xl md:text-5xl text-paragraph-950 font-bold text-left"
            >
              20+
            </p>
            <p class="text-sm md:text-lg text-paragraph-500 text-left">
              Years of Experience
            </p>
          </div>
          <div class="flex flex-col">
            <p
              class="text-xl md:text-5xl text-paragraph-950 font-bold text-left"
            >
              483
            </p>
            <p class="text-sm md:text-lg text-paragraph-500 text-left">
              Happy Client
            </p>
          </div>
          <div class="flex flex-col">
            <p
              class="text-xl md:text-5xl text-paragraph-950 font-bold text-left"
            >
              150+
            </p>
            <p class="text-sm md:text-lg text-paragraph-500 text-left">
              Project Finished
            </p>
          </div>
        </div>

        {/* Image */}
        <div class="flex flex-col justify-center items-center gap-2.5">
          <div class="w-full h-[200px] md:hidden">
            <img
              src={image1.src}
              alt="Our Product 1"
              class="flex-shrink-0 object-cover w-full h-full"
            />
          </div>
          <div class="w-full h-[200px] md:h-[580px] xl:h-[610px]">
            <img
              src={image2.src}
              alt="Our Product 2"
              class="flex-shrink-0 object-cover w-full h-full"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
